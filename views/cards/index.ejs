        <h1><span class="fa fa-anchor"></span> Kortų katalogas</h1>
    </div>

    <div class="col-md-4">
        <% cards.forEach(function(card) {%>
        <div class="card mb-4 shadow-sm">
            <img class="card-img-top" src="<%= card.imageUrl %>" width="auto" height="255"
            preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
            <div class="card-body">
                <h3 class="card-text"> <%= card.name %> </h3>
                <p class="card-text"> <%= card.author %> </p>
                <button type="button" claass="btn btn-primary" onclick="location.href =
                                                               '/cards/show/<%= card.id
                                                               %>'">Komentuoti</button>
            </div>
        </div>
        <% }) %>
    </div>
