<!DOCTYPE html>
<html>
  <head>
    <title>Employee Detail</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/users">Users List</a></h3>
      <h1>User Details</h1>
      <table>
        <tbody>
          <tr>
            <td>Name</td>
            <td>:</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>Email</td>
            <td>:</td>
            <td><%= user.email%></td>
          </tr>
          <tr>
            <td>Description</td>
            <td>:</td>
            <td><%= user.description %></td>
          </tr>
        </tbody>
      </table>
      <h3><a href="/users/edit/<%= user._id%>">EDIT</a></h3>
      <form action="/users/delete/<%= user._id%>" method="post">
        <button type="submit">DELETE</button>
      </form>
    </div>
  </body>
</html>